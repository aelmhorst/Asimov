<?xml version="1.0" encoding="utf-8"?>
<widget>
	<name>Scrolling Sidebar Widget</name>
	<author>Metrodigi</author>
	<version>0.1</version>
	<id>EPUB_WIDGET_SIDEBAR</id>
	<label>Scrolling Sidebar</label>
	<description>Scrolling sidebars enable you to have a lot of text and images in a small area on a page.</description>
	<license url="http://opensource.org/licenses/MIT">MIT License</license>
	
	<files>
		<filename resource="book" import="true" init-script="true">scrolling-sidebar.js</filename>
		<filename resource="book" import="true">scrolling-sidebar.css</filename>
	</files>
	<dependencies>
		<dependency resource="book">external/mootools-core-1.4.5-full-nocompat-yc.js</dependency>
		<dependency resource="book">external/mootools-more-1.4.0.1-yc.js</dependency>
		<dependency resource="book">mootools-drag-touch.js</dependency>
		<dependency resource="book">common.js</dependency>
	</dependencies>
	<params>
		<param key="compatibility">
            <access booktype="Reflowable">true</access>
            <access booktype="FixedLayout">true</access>
        </param>
        <param key="editor">
    		<dimensions width="740" height="660"/>
        </param>
	</params>
</widget>